{% extends 'base.html.twig' %}

{% block title %} List of offers {% endblock %}

{% block body %}
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"> 
<link rel="stylesheet" href="css/table.css"> 
</head>

<br>
<div>
 <h1><a href="{{ path('category_new') }}" class="btn btn-outline-danger">Add A New Category</a></h1>
</div>
<br>
<section>
  <h1>List of Categories</h1>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Type de Contrat</th>
          <th>Type de Job</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
      {% for category in categories %}
        <tr>
          <td>{{category.typeContrat}}</td>
          <td>{{category.typeJob}}</td>
          <td>
          <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outline-dark">Show</a>
          <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-outline-warning">Edit</a> 
          {{ include('category/_delete_form.html.twig') }}
          </td>
        </tr>
        {% else %} 
        <tr>
                <td colspan="5">no categories found</td>
            </tr>
        {% endfor %}
      
      </tbody>
    </table>
  </div>
</section>
{% endblock %}
