{% extends 'base.html.twig' %}

{% block body %}

<h1> Login To Your Account !! </h1>
<form action="{{ path('security_login') }}" method = "post">
	<div class="form-group">
		<input placeholder="Email Address" required name = "_username" type = "text" class = "form-group">
	</div>
	<div class="form-group">
		<input placeholder="Password" required name = "_password" type = "password" class = "form-group">
	</div>
	<div class="form-group">
		<button type = "submit" class = "btn btn-success"> Login ! </button>
	</div> 
</form>
	

{% endblock %}