<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Job Portal {% endblock %}</title>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="css/base.css"> 
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css">
            <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,500i,700,800i" rel="stylesheet">
            <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> 

    </head>
        <div class="header2 bg-success-gradiant">
            <div class="">
                <!-- Header 1 code -->
                <nav class="navbar navbar-expand-lg h2-nav"> <a class="navbar-brand" href="/">Job Portal</a> <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#header2" aria-controls="header2" aria-expanded="false" aria-label="Toggle navigation"> <span class="icon-menu"></span> </button>
                    <div class="collapse navbar-collapse hover-dropdown" id="header2">
                        <ul class="navbar-nav">
                            <li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path ('offer') }}">Post a job</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path ('category') }}">Categories</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path ('list') }}">Users</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path ('condidature' )}}">Candidature</a></li> 
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            {% if  app.user %}
                            <li class="nav-item active"><a class="nav-link" href="{{ path ('profile') }}"><i class="icon-bubble"></i> Profile</a></li>
                            <li class="nav-item active"><a class="nav-link" href="{{ path('logout') }}">Logout</a></li>
                            {% else %}
                              <li class="nav-item active"><a class="nav-link" href="{{ path('security_login') }}">Login</a></li>
                              <li class="nav-item"><a class="btn rounded-pill btn-dark py-2 px-4" href="{{ path('security_register') }}">Sign up</a></li>
                            {% endif %}
                            
                        </ul>
                    </div>
                </nav> 
            </div>
        </div>
    </head>
    <body>
        {% block body %}{% endblock %}
       
    </body>
</html>
