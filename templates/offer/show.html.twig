{% extends 'base.html.twig' %}
{% block title %} Job Offer{% endblock %}

{% block body %}
<head>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
<link rel="stylesheet" href="css/card.css"> 
</head>

<div class="container mt-5 mb-3">
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bx bxl-dribbble"></i> </div>
                        <div class="ms-2 c-details">
                            <h6 class="mb-0">Recruteur</h6> <span>4 days ago</span>
                        </div>
                    </div>
                    <div class="badge"> <span>Cat√©gorie</span> </div>
                    <div class="badge"> <span> {{offer.salaire}}</span></div> 
                </div>
                <div class="mt-5">
                    <h3 class="heading">Poste: {{offer.title}}<br>{{offer.disponibility}}</h3>
                    <span> {{offer.description}} 
                    <div class="mt-5">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="mt-3"> <span class="text1">42 Applied <span class="text2">of 70 capacity</span></span> </div>

                    </div>
                    <div class="mt-3">
                        <a href="{{ path('offer') }}" class="btn btn-outline-primary">Back</a></div>
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('offer_edit', {'id': offer.id}) }}" class="btn btn-outline-warning">Edit</a>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
  

{% endblock %}